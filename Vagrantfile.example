Vagrant.configure("2") do |config|
  config.vm.box = "precise64"
  config.vm.box_url = "http://files.vagrantup.com/precise64.box"
  config.vm.network :forwarded_port, guest: 3000, host: 3000

  config.vm.synced_folder "/home/tomn/matio/", "/home/vagrant/matio"
  config.vm.synced_folder "/home/tomn/probably-base/", "/home/vagrant/probably-base"
  config.vm.synced_folder "/home/tomn/baysig-core/", "/home/vagrant/baysig-core"
  config.vm.synced_folder "/home/tomn/bugsess/", "/home/vagrant/bugsess"
  config.vm.synced_folder "/home/tomn/baysig-exec/", "/home/vagrant/baysig-exec"
  config.vm.synced_folder "/home/tomn/bayeshive/", "/home/vagrant/bayeshive"


  #config.vm.synced_folder "./", "/vagrant"
  config.vm.provision :puppet do |puppet|
    puppet.module_path = "modules"
    puppet.manifest_file = "devel.pp"
  end

  config.vm.provider :virtualbox do |vb|
    vb.gui = false
    vb.customize ["modifyvm", :id, "--memory", "2048"]
    vb.customize ["modifyvm", :id, "--cpus", "2"]
  end
end
